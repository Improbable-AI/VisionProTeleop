<mujoco model="panda scene">

  <extension>
    <plugin plugin="mujoco.sdf.nut">
      <instance name="nut">
        <config key="radius" value="0.026"/>
      </instance>
    </plugin>
    <plugin plugin="mujoco.sdf.bolt">
      <instance name="bolt">
        <config key="radius" value="0.0255"/>
      </instance>
    </plugin>
  </extension>

  <statistic meansize=".1"/>


  <include file="panda.xml"/>
  <option sdf_iterations="10" sdf_initpoints="20">
    <!-- <flag override="enable" /> -->
  </option>

  <statistic center="0.3 0 0.35" extent="0.8" meansize="0.05"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.1 0.1 0.1" specular="0 0 0"/>
    <global azimuth="120" elevation="-20"/>
  </visual>

  <asset>
    <texture name="grid" type="2d" builtin="checker" rgb1=".2 .3 .4" rgb2=".1 0.15 0.2" width="512" height="512"
      mark="cross" markrgb=".8 .8 .8"/>
    <material name="grid" texture="grid" texrepeat="1 1" texuniform="true"/>
    <mesh name="nut">
      <plugin instance="nut"/>
    </mesh>
    <mesh name="bolt">
      <plugin instance="bolt"/>
    </mesh>
  </asset>


  <default>
    <geom solref="0.01 1" solimp=".95 .99 .0001" friction="0.01"/>
  </default>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="1 1 0.01" type="plane" material="grid"/>
    <body name="target" pos="0.5 0 .5" quat="0 1 0 0" mocap="true">
      <geom type="box" size=".05 .05 .05" contype="0" conaffinity="0" rgba=".6 .3 .3 .5"/>
      <site type="sphere" size="0.01" rgba="0 0 1 1" group="1"/>
    </body>
    <!-- <body name="cube1">
      <freejoint/>
      <geom type="box" size="0.03 0.03 0.03" contype="1" conaffinity="1" rgba=".6 .0 .0 1." mass="0.01" condim="4" friction="1.0 1.0 1.0"/>
    </body>
    <body name="cube2">
      <freejoint/>
      <geom type="box" size="0.03 0.03 0.03" contype="1" conaffinity="1" rgba=".3 .6 .3 1." mass="0.01" condim="4" friction="1.0 1.0 1.0"/>
    </body> -->
    <body name="cube1">
      <joint type="free" damping="30"/>
      <geom type="sdf" name="nut" mesh="nut" rgba="0.83 0.68 0.4 1">
        <plugin instance="nut"/>
      </geom>
    </body>
    <body name="cube2" euler="180 0 0">
      <joint type="free" damping="30"/>
      <geom type="sdf" name="bolt" mesh="bolt" rgba="0.7 0.7 0.7 1">
        <plugin instance="bolt"/>
      </geom>
    </body>

  </worldbody>


  <keyframe>
    <key name="home" qpos="0 0 0 -1.57079 0 1.57079 0.7853 0.04 0.04 0.5 0 0.03 1 0 0 0  0.3 -0.1 0.03 1 0 0 0" ctrl="0 0 0 -1.57079 0 1.57079 -0.7853 255"/>
  </keyframe>

</mujoco>
