      <geom type="box" size="0.06 0.06 0.06" contype="1" conaffinity="1" rgba=".3 .6 .3 1." mass="0.01" condim="4" friction="1.0 1.0 1.0"/>
    </body> -->

    <body name="target_pos" mocap="true" childclass="cube">
      <geom type="mesh" mesh="cube_mesh" material="dexcube" contype="0" conaffinity="0" density="0"/>
      <geom name="target_cube" type="box" size=".05 .05 .05" mass=".108" group="3" contype="0" conaffinity="0" />
      <site name="target_cube_center" pos="0 0 0" group="4"/>
    </body>


    <body name="cube" pos="0.3 0.0 0.2" quat="1 0 0 0" childclass="cube">
      <freejoint/>
      <geom type="mesh" mesh="cube_mesh" material="dexcube" contype="0" conaffinity="0" density="0" group="2"/>
      <geom name="cube" type="box" size=".05 .05 .05" mass="0.1" group="3"/>
      <site name="cube_center" pos="0 0 0" group="4"/>
    </body>

  </worldbody>


  <keyframe>
    <key name="home" qpos="0 0 0 -1.57079 0 1.57079 0.7853 0.04 0.04 0.5 0 0.03 1 0 0 0" ctrl="0 0 0 -1.57079 0 1.57079 -0.7853 255"/>
