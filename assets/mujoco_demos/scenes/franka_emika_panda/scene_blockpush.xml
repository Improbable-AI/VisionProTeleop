      <site type="sphere" size="0.01" rgba="0 0 1 1" group="1"/>
    </body>
    <!-- <body name="target_pos" mocap="true">
      <geom type="box" size="0.06 0.06 0.06" contype="0" conaffinity="0" rgba=".6 .0 .0 1."/>
    </body> -->
